<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentNoninvAddOption">


    <TextView
        android:id="@+id/co_measured_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="@string/co_measured_title"
        app:layout_constraintBottom_toBottomOf="@id/co_measured"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/co_measured" />

    <EditText
        android:id="@+id/co_measured"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/l_min"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@id/co_measured_title"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>